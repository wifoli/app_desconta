<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:id="@+id/primeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/segundo"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_valor_parcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_recycle_valor_parcela"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/valor_parcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/segundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_numero_parcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_recycle_parcela_atual"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/numero_parcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/terceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/primeiro"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_numero_boleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_recycle_numero_boleto"
            android:textColor="@color/colorPrimaryText" />

        <TextView
            android:id="@+id/numero_boleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_pagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/meu_botao"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/pagar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@+id/terceiro"
        android:layout_marginTop="20dp"

        android:background="@color/colorPrimary" />
</RelativeLayout>